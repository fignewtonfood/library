<html>
    <head>
        <title>Update {{ book.getTitle }}</title>
    </head>
    <body>
        <h1>Update {{ book.getTitle }}</h1>

        <form id="form_id" action="/book/{{ book.getId }}/author" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="author">Rename author:</label>
            <input id="author" name="author" type="text">

            <button type="submit">Update author</button>
        </form>

        <form id="form_id" action="/book/{{ book.getId }}/title" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="title">Change title:</label>
            <input id="title" name="title" type="text">

            <button type="submit">Update title</button>
        </form>

        <form action="/book/{{ book.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">

            <button type="submit">Delete this book</button>
        </form>
    </body>
</html>
